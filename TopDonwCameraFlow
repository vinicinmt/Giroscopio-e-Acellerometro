using UnityEngine;

public class TopDonwCameraFlow : MonoBehaviour
{
    public Transform target; // Sphere position
    public float height = 20f;
    public float smooth = 5f;

    private Vector3 offset; //ser√° esada para salvar o valor

    void Start()
    {
        offset = transform.position = target.position;
        offset.y = height;
    }

    // Update is called once per frame
    void LateUpdate()
    {
        if (!target) return;

        Vector3 desiredPos = target.position + offset;
        desiredPos.y = height;
        transform.position = Vector3.Lerp(transform.position, desiredPos, Time.deltaTime * smooth);
    }
}
